{
  "Version": "2012-10-17",
  "Statement": [
      {
          "Effect": "Allow",
          "Action": [
              "dynamodb:BatchGetItem",
              "dynamodb:DescribeTable",
              "dynamodb:GetItem",
              "dynamodb:GetRecords",
              "dynamodb:Scan",
              "dynamodb:Query",
              "dynamodb:PartiQLSelect"
          ],
          "Resource": [
              "<DynamoDB Table ARN>"
          ]
      }
  ]
}